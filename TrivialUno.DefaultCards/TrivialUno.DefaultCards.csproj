<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>TrivialUno.DefaultCards</PackageId>
    <Version>0.1.0</Version>
  </PropertyGroup>

  <PropertyGroup>
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
    <AnalysisMode>Recommended</AnalysisMode>
    <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
    <CodeAnalysisTreatWarningsAsErrors>true</CodeAnalysisTreatWarningsAsErrors>
    <AnalysisLevel>latest</AnalysisLevel>
    <NoWarn>CA1848,CA5394,CA1812</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <!-- implicit global using -->
    <Using Include="TrivialUno.Definitions" />
    <Using Include="TrivialUno.Definitions.Attributes" />
    <Using Include="TrivialUno.DefaultEffects" />
  </ItemGroup>

  <ItemGroup>
    <!-- components -->
    <ProjectReference Include="..\TrivialUno.Definitions\TrivialUno.Definitions.csproj" />
    <ProjectReference Include="..\TrivialUno.DefaultEffects\TrivialUno.DefaultEffects.csproj" />
  </ItemGroup>

  <ItemGroup>
    <!-- external dependencies -->
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="7.0.0" />
  </ItemGroup>
</Project>
